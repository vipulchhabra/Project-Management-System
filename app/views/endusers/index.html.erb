  <h1>Listing endusers</h1>


  <%= form_tag endusers_path, :method => 'get' do %>
   <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <!--%= hidden_field_tag :search, params[:search] %-->
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>


  <table>
    <thead>
      <tr>
        <th><%= sortable "firstname", "First Name" %></th>
        <th><%= sortable "lastname", "Last Name" %></th>
        <th><%= sortable "empno", "Emp no." %></th>
        <th><%= sortable "dateofbirth", "Date of birth" %></th>
        <th><%= sortable "address", "Address" %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @endusers.each do |enduser| %>
        <tr>
          <td><%= enduser.firstname %></td>
          <td><%= enduser.lastname %></td>
          <td><%= enduser.empno %></td>
          <td><%= enduser.dateofbirth %></td>
          <td><%= enduser.address %></td>
          <td><%= link_to 'Show', enduser %></td>
          <td><%= link_to 'Edit', edit_enduser_path(enduser) %></td>
  <td><%= link_to 'Destroy', enduser, :method => :delete, confirm: 'Are you sure' %></td>

  <td><%= link_to 'Allocate project', assign_enduser_path(enduser, project_id: @pro), 
    :action => :assign  %></td>
  </tr>
      <% end %>
    </tbody>
  </table>


  <%= will_paginate @endusers %>


  <br>

  <%= link_to 'New Enduser', new_enduser_path %>
