<%= form_for(@enduser) do |f| %>
  <% if @enduser.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@enduser.errors.count, "error") %> prohibited this enduser from being saved:</h2>

      <ul>
      <% @enduser.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :empno %><br>
    <%= f.text_field :empno %>
  </div>
  <div class="field">
    <%= f.label :dateofbirth %><br>
    <%= f.date_select :dateofbirth, :start_year => 1900, :order => [:day, :month, :year], :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }%>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.label :gender, "Male", :value => "true"  %>
    <%= f.radio_button :gender, true, :checked => true %>
    <%= f.label :gender, "Female", :value => "false" %>
    <%= f.radio_button :gender, false %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
